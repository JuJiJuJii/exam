<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
      <div class="span8">
      <h3>New Post</h3>
      <%= render 'shared/feed' %>
    </div>
    </aside>

     
    
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome To The BLOG
      <center><%= link_to image_tag("recommended_blog1.jpg"),'#' %></center>
     </h1>
  

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  
<% end %>